<div class="home background" data-background-options='{"source":"{{ 'background.jpg'  | asset_url }}"}'>
  <div class="home-wrapper">
    <div class="fs-row">
      <div class="fs-cell fs-lg-5 fs-md-half fs-sm-half fs-all-align-center">
        <div class="home-content">
          {{ pages.splash.content }}
          <div class="home-content-join">
            <a class="" href="{{ link.url }}">Join the Mailing List</a>
          </div>
        </div>
      </div>
      <div class="fs-cell fs-lg-7 fs-md-half fs-sm-half">
        <div class="home-spacer"></div>
      </div>
    </div>
  </div>
</div>

<div id="subscribe" class="subscribe center">
  <div class="subscribe-centered">
    <div class="fs-row">
      <div class="fs-cell fs-lg-10 fs-md-5 fs-sm-3 fs-all-justify-center">
        <div class="fs-row subscribe-bg">
          <a href="" class="subscribe-close swap close" data-swap-target="#subscribe" data-swap-linked='.close'><i data-feather="x"></i></a>
          <div class="fs-cell fs-all-half fs-sm-hide fs-contained">{{ 'subscribe.jpg'  | asset_url | img_tag, '', 'img-responsive' }}</div>
          <div class="fs-cell fs-all-half fs-sm-full fs-lg-align-center fs-contained">
            <div class="subscribe-content">
              <div class="subscribe-primary">Join the Sonne email list</div>
              <div class="subscribe-secondary">Be the first to know when we launch, receive special offers, and more.</div>
              {% include 'subscribe-form' %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% comment %}
<div class="splash">
  <div class="splash-background background" data-background-options='{"source":"{{ 'background.jpg'  | asset_url }}"}'>
    <div class="fs-row splash-content">
      <div class="fs-cell fs-lg-5 fs-md-half fs-sm-2 fs-all-align-center">
        <div class="content">
          {{ pages.splash.content }}
        </div>
      </div>
      <div class="fs-cell fs-lg-7 fs-md-half fs-sm-1 fs-all-align-center splash-content-wrap">
      </div>
    </div>
  </div>
  <div class="splash-footer">
    <div class="fs-row">
      <div class="fs-cell fs-lg-8 fs-md-half fs-sm-half splash-footer-join">
